---
interface Props {
  title: string
  description: string
  motivation?: string
  link: string
}

const { title, description, link, motivation } = Astro.props as Props
---

<div class="blogroll-card">
  <h2 class="title">{title}</h2>
  <small class="description">&#10230; {description}</small>
  {motivation && <blockquote class="motivation">{motivation}</blockquote>}
  <a href={link} class="link" target="_blank" rel="noopener" referrerpolicy="origin"
    >Visit Blog &nearr;</a
  >
</div>

<style>
  span {
    color: var(--color-primary);
    font-weight: 600;
    font-size: 0.8rem;
    display: block;
  }
  .blogroll-card {
    background: var(--bg-main);
    border-left: 2px solid var(--color-primary);
    padding: 1.5em;
    margin: 0;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  .title {
    color: var(--color-primary);
    line-height: 1.2;
    text-align: left;
  }

  .description {
    font-size: 0.95rem;
    color: var(--color-primary);
    margin-bottom: 1em;
    line-height: 1.5;
    flex-grow: 1;
  }

  .link {
    color: var(--color-primary);
    text-decoration: none;
    font-family: CommitMono, monospace;
    font-weight: 600;
    font-size: 0.9rem;
    padding: 0.5em 1em;
    border-radius: 6px;
    display: inline-block;
    transition: background 0.2s ease;
    text-align: right;
    margin-top: auto;
  }

  .link:hover {
    text-decoration: underline;
  }

  .motivation {
    font-size: 0.9rem;
    line-height: 1.4;
    background-color: #111111;
  }
</style>
