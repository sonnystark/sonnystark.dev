---
const today = new Date()
import '../styles/global.css'
import {
  SITE_TITLE,
  GITHUB_URL,
  LINKEDIN_URL,
  MASTODON_URL,
  BLUESKY_URL,
  RSS_URL,
  BANDCAMP_URL,
  EMAIL,
  CODEPEN_URL,
} from '../consts'
---

<footer>
  <div class="footer-content">
    <div class="copyright">
      <small
        >&copy; {today.getFullYear()}
        {SITE_TITLE}. All rights reserved.</small
      >
      <small
        >This site is powered by <a href="https://astro.build/" target="_blank">Astro</a>. The
        content on this site is written by a real human.</small
      >
      <small>This is not a place for bots, crawlers and/or AI sycophants.</small>
    </div>

    <nav class="sitemap">
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/blog">Blog</a>
      <a href="/projects">Projects</a>
      <a href="/blogroll">Blogroll</a>
      <a href="/contact">Contact</a>
    </nav>

    <div class="social-links">
      <ul>
        <li>
          <a href={EMAIL} target="_blank" rel="noopener noreferrer"> Email </a>
        </li>
        <li>
          <a href={GITHUB_URL} target="_blank" rel="noopener noreferrer"> GitHub </a>
        </li>
        <li>
          <a href={LINKEDIN_URL} target="_blank" rel="noopener noreferrer"> LinkedIn </a>
        </li>
        <li>
          <a href={CODEPEN_URL} target="_blank" rel="noopener noreferrer"> CodePen </a>
        </li>
        <li>
          <a href={BLUESKY_URL} target="_blank" rel="noopener noreferrer"> Bluesky </a>
        </li>
        <li>
          <a href={MASTODON_URL} target="_blank" rel="noopener noreferrer"> Mastodon </a>
        </li>
        <li>
          <a href={BANDCAMP_URL} target="_blank" rel="noopener noreferrer"> Bandcamp </a>
        </li>
        <li>
          <a href={RSS_URL} rel="noopener noreferrer"> Rss </a>
        </li>
      </ul>
    </div>
  </div>
  <style>
    footer {
      margin-top: auto;
      width: 100vw;
      padding: 3.5em 2em;
      background: #111111;
      color: var(--accent-primary);
      background-image: url('/assets/dirt-yellow.svg');
      font-family: CommitMono, monospace;
      font-size: 0.9rem;
    }

    small {
      display: block;
    }
    :where(a) {
      color: var(--accent-primary);
      transition: opacity 0.2s ease;
    }
    :where(a):hover {
      opacity: 0.8;
      text-decoration: underline;
    }
    .footer-content {
      display: grid;
      grid-template-columns: 1fr auto 1fr;
      align-items: center;
      max-width: 100%;
      margin: 0 auto;
      gap: 3em;
    }

    .copyright {
      justify-self: start;
      font-size: 0.85rem;
    }

    .sitemap {
      display: flex;
      justify-content: center;
      gap: 1.5em;
      justify-self: center;
    }

    .sitemap a {
      color: var(--accent-primary);
      text-decoration: none;
      font-weight: 600;
      text-transform: uppercase;
    }

    .social-links {
      display: flex;
      justify-self: end;
    }

    .social-links ul li {
      list-style: none;
      display: inline;
    }

    .social-links a {
      text-decoration: none;
      color: var(--accent-primary);
    }
  </style>

  <!-- Global styles for sticky footer layout -->
  <style>
    html,
    body {
      height: 100%;
    }

    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      margin: 0;
    }

    main {
      flex: 1;
    }
    @media (max-width: 960px) {
      .footer-content {
        display: flex !important;
        flex-direction: column !important;
        align-items: center !important;
        justify-content: center !important;
        gap: 2.5em !important;
        text-align: center !important;
        width: 100%;
      }

      .copyright {
        order: 3;
        width: 100%;
        margin-top: 2em;
        text-align: center !important;
        justify-self: center !important;
      }

      .sitemap {
        order: 1;
        justify-content: center !important;
        flex-wrap: wrap !important;
        gap: 1em !important;
        width: 100%;
      }

      .social-links {
        order: 2;
        justify-content: center !important;
        width: 100%;
      }

      .social-links ul {
        padding: 0;
        margin: 0 auto;
        text-align: center;
      }
    }
  </style>
</footer>
